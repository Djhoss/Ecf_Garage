<br>
<br>
<br>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="display-4">Nous contacter</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                        {{ form(formContact) }}
                </div>
            </div>
        </div>
		<div class="row">
			<div class="">
		      <a href="#" id="back-to-top" class="display-4 border" title="Back to Top">&uarr;</a>
			</div>
		</div>
		  

    </div>
</section>
</body>


{% endblock %}

