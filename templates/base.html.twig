<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}{% endblock %}
		</title>
		<link rel="stylesheet" href="./assets/css/style.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous"></head>
	<header>
		<!-- navbar.html.twig -->
<nav class="navbar navbar-expand-lg navbar-light bg-white nav">
    <div class="container">
        <!-- Logo à gauche -->
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('img/logo.png') }}" alt="Logo" width="100px" height="100px">
        </a>
        <!-- Bouton de menu responsive -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            {% if app.request.attributes.get('_route') == 'app_home' %}
                <ul class="navbar-nav mx-auto">
                    <!-- Ancres pour les services, les témoignages et le contact au centre -->
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Services</a>
                    </li>
                    <li class="nav-item px-5">
                        <a class="nav-link" href="#temoignages">Témoignages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item px-5">
                            <a class="nav-link text-warning" href="{{ path('admin') }}">Admin</a>
                        </li>
                    {% endif %}
                </ul>
            {% else %}
                <ul class="navbar-nav mx-auto">
                    <!-- Liens pour les services, les témoignages et le contact au centre -->
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}#services">Services</a>
                    </li>
                    <li class="nav-item px-5">
                        <a class="nav-link" href="{{ path('app_home') }}#temoignages">Témoignages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}#contact">Contact</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item px-5">
                            <a class="nav-link text-warning" href="{{ path('admin') }}">Admin</a>
                        </li>
                    {% endif %}
                </ul>
            {% endif %}
            <ul class="navbar-nav ml-auto">
                <!-- Lien pour les ventes à droite -->
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_car') }}">Nos Ventes</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


		{% if app.request.attributes.get('_route') not in ['car', 'app_car'] %}
      <div class="container-fluid">
          <img src="./img/nav.jpg" alt="Image" class="nav-img img-fluid">
      </div>
    {% endif %}


	</header>

  {% block login %}{% endblock %}

  {% block register %}{% endblock %}

  {% block car %}{% endblock %}

  {% block showCar %}{% endblock %}

	{% block section2 %}
	
  {# Section2 - Les témoignages #}

	{% endblock %}

	{% block section1 %}
	
    {# Section1 - Les services #}

	{% endblock %}

	{% block section3 %}
	
	{# Section3 - Le contact #}

	{% endblock %}
	
  <footer>
  <div class="container">
  <br>
    <div class="row">
      <div class="col-md-4">
        <div class="schedule-table">
          <table>
            <tr>
              <th>Jour</th>
              <th>Horaire</th>
            </tr>
          {% for horaire in horaire %}
            <tr>
              <td>{{ horaire.day }}</td>
              <td>{{ horaire.time }}</td>
            </tr>
          {% endfor %}
          </table>
        </div>
      </div>
        <div class=" col-md-4 contact-info">
          <h4 class="text-center">Contact</h4>
          <p class="text-center"><strong>Numero : 0601020304</strong></p>
          <p class="text-center">Email: Blabla@gmail.com</p>
        </div>
        <div class="col-md-4 text-end">
          {% if app.user %}
              <div class="text-center mb-3">
                  <h3>Déconnexion</h3>
                  <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
              </div>
          {% else %}
              <div class="text-center mb-3">
                  <h3>Employee Login</h3>
                  <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
              </div>
          {% endif %}
        </div>

        {% if app.user %}
        <br>
        <hr>
        <br>
            <div class="text-center mb-3">
                <h3>Page Administrateur</h4>
                <a href="{{ path('admin') }}" class="btn btn-secondary">Accés Admin</a>
            </div>
        {% endif %}
        
    </div>
  </div>
  <br>
  <div class="container-fluid">
      <div class="text-center mt-5 p-3 bg-dark text-white">
         <p>Edit by Vover</p>
         <p>&copy; 2023 Vover. All rights reserved.</p>
      </div>
  </div>
</footer>

</body>

	



    {% block javascripts %}
	<script src="./assets/js/index.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
	{% endblock %}
	

</html>
